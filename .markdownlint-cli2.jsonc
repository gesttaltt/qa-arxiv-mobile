{
  "config": {
    "extends": ["markdownlint/style/all"],
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": false
    },
    "MD033": {
      "allowed_elements": ["br", "sub", "sup"]
    },
    "MD041": false,
    "MD046": {
      "style": "fenced"
    }
  },
  "globs": [
    "**/*.md"
  ],
  "ignores": [
    "node_modules/**",
    "**/node_modules/**"
  ]
}
